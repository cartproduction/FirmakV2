<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <iammert.com.expandablelib.ExpandableLayout
        android:id="@+id/onaybekleyen"
        android:layout_below="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:parentLayout="@layout/layout_header"
        app:childLayout="@layout/layout_child"/>

    <iammert.com.expandablelib.ExpandableLayout
        android:id="@+id/onayladigim"
        android:layout_below="@+id/onaybekleyen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
